<?xml version="1.0" encoding="UTF-8"?>
    <LinearLayout android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradientbackgroundloginsingup"
    android:layout_height="200dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_height="90dp"
        android:layout_width="90dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:civ_border_width="2dp"
            app:civ_border_color="#5da6ac"
            android:src="@mipmap/profile_image_edit_icon"
            android:id="@+id/nav_userphoto"
            xmlns:app="http://schemas.android.com/apk/res-auto"/>
        <LinearLayout android:gravity="bottom|right"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:src="@mipmap/profile_image_add_icon"
                android:id="@+id/nav_user_pic_change"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:src="@mipmap/profile_image_delete_icon"
                android:id="@+id/nav_user_pic_delete"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:src="@mipmap/profile_image_edit_icon"
                android:id="@+id/nav_user_pic_management"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/nam_nav"
        android:textColor="@android:color/holo_green_dark"
        android:text="asdsd"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/email_nav"
        android:textColor="@android:color/holo_green_dark"
        android:text="asdsd"/>
</LinearLayout>